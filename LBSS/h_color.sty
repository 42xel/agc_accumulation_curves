%% UK => COLOUR
%% US => COLOR

\providecommand{\newColorRGB}[4]{%
  \ifx\definecolor\undefined\relax\else\definecolor{#1}{rgb}{#2,#3,#4}\fi%
  \ifx\newrgbcolor\undefined\relax\else\newrgbcolor{#1}{#2 #3 #4}\fi
  \expandafter\def\csname #1\endcsname{\color{#1}}
}


%% To define colors
%% #1 and #2  names used (tipically English/American + French
%% #3 Red   0 <= ... <= 1
%% #4 Green   0 <= ... <= 1
%% #5 Blue   0 <= ... <= 1
\providecommand{\newColorRGBdbl}[5]{%
  \newColorRGB{#1}{#3}{#4}{#5}
  \newColorRGB{#2}{#3}{#4}{#5}
}

