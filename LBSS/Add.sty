\newcommand{\MyMarginPar}[1]{%
  \ifinner{

    \centerline{
      \begin{minipage}{0.8\linewidth}
        \small%
        #1%
      \end{minipage}
    }%
    
  }\else{%
    \marginpar{\small\footnotesize%
      #1%
    }%
  }\fi%
}

\newcommand{\SubmissionOnly}[1]{%
  \hspace{0pt}\MyMarginPar{\footnotesize%
    #1%
  }%
}

\newcommand{\TODO}[1]{%
  \MyMarginPar{\sf\color{red}{#1}}%
}


