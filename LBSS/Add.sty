\newlength{\THEparindent}
\THEparindent\parindent
\newenvironment{itemizeCompact}{%
  \begingroup%
  \leftmargini\THEparindent%
  \leftmarginii\THEparindent%
  \leftmarginiii\THEparindent%
  \leftmarginiv\THEparindent%
  \begin{list}{--}{%
      \itemsep 0cm%
      \topsep  0cm%
      \partopsep 0cm%
      \parsep 0cm%
      %\leftmargin0\parindent
    }%
  }{%
  \end{list}%
  \endgroup%
}

\newenvironment{Description}{%
  \begingroup%
  \leftmargini\THEparindent%
  \leftmarginii\THEparindent%
  \leftmarginiii\THEparindent%
  \leftmarginiv\THEparindent%
  % \begin{list}{--}{%
  \begin{description}
    \leftmargini\THEparindent%
    \itemsep 0cm%
    \topsep  0cm%
    \partopsep 0cm%
    \parsep 0cm%
  }{%
  \end{description}%
  \endgroup%
}



\newenvironment{Enumerate}{%
  \begingroup%
  \leftmargini\THEparindent%
  \leftmarginii\THEparindent%
  \leftmarginiii\THEparindent%
  \leftmarginiv\THEparindent%
  \begin{enumerate}[nolistsep,noitemsep]
  }{%
  \end{enumerate}%
  \endgroup%
}



\newenvironment{tightcenter}{%
  \setlength\topsep{0pt}
  \setlength\parskip{0pt}
  \begin{center}
}{%
  \end{center}
}

\newenvironment{Align}{%
  \begin{tightcenter}
    \begin{math}
      \displaystyle
      \begin{array}{rl}
        }{%
      \end{array}
    \end{math}
  \end{tightcenter}
}



\newenvironment{Eqnarray}{%
  \begin{tightcenter}
    \begin{math}
      \displaystyle
      \begin{array}{rcl}
        }{%
      \end{array}
    \end{math} 
  \end{tightcenter}
}





